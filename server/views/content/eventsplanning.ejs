<h1>Events Planning List</h1>

<div class="row">
    <div class="col">

        <!-- <button id="addButton" class="btn btn-primary btn-sm mb-1">
            <i class="fas fa-plus fa-sm"> Add Event</i>
        </button> -->

        <table class="table table-striped table-boarded table-hover">
            <thead class="table-dark">
            <tr>
                <th scope="col" class="text-center">#</th>
                <th scope="col" id="eventName">Name of the event</th>
                <th scope="col" id="coordinatorName">Coordinator's Name</th>
                <th scope="col" id="contactNumber">Contact Number</th>
                <th scope="col" id="email">Email</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody id="eventsPlanning">
            <tr id="newEventRow">
                <td class="text-center">New</td>
                <td><input type="text" class="form-control" id="newEventName" placeholder="Event Name"></td>
                <td><input type="text" class="form-control" id="newCoordinatorName" placeholder="Coordinator's Name"></td>
                <td><input type="text" class="form-control" id="newContactNumber" placeholder="Contact Number"></td>
                <td><input type="email" class="form-control" id="newEmail" placeholder="Email"></td>
                <td><button class="btn btn-success btn-sm" id="saveNewEvent" onclick="saveNewEvent()">Save</button></td>
                <td><button class="btn btn-danger btn-sm" id="cancelNewEvent" onclick="cancelNewEvent()">Cancel</button></td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
